{
  "$schema": "https://opencode.ai/config.json",
  "autoshare": false,
  "autoupdate": true,
  "disabled_providers": ["opencode", "amazon-bedrock"],
  "provider": {
    "amazon": {
      "npm": "@ai-sdk/amazon-bedrock",
      "name": "Amazon Bedrock",
      "env": ["AWS_REGION", "AWS_ACCOUNT_ID", "US_WEST_2_GPT_OSS_20B_APPLICATION_PROFILE_ID"],
      "models": {
        "arn:aws:bedrock:{env:AWS_REGION}:{env:AWS_ACCOUNT_ID}:application-inference-profile/{env:US_WEST_2_GPT_OSS_20B_APPLICATION_PROFILE_ID}": {
          "name": "gpt-oss-20b (Profile)" 
        },
        "openai.gpt-oss-20b-1:0": {
          "name": "gpt-oss-20b"
        },
        "openai.gpt-oss-120b-1:0": {
          "name": "gpt-oss-120b"
        },
        "us.amazon.nova-micro-v1:0": {
          "name": "Nova Micro (Cross Region)",
          "limit": {
            "context": 5000,
            "output": 5000
          },
          "options": {
            "max_tokens": 5000
          }
        },
        "us.amazon.nova-lite-v1:0": {
          "name": "Nova Lite (Cross Region)",
          "limit": {
            "context": 5000,
            "output": 5000
          },
          "options": {
            "max_tokens": 5000
          }
        },
        "us.amazon.nova-pro-v1:0": {
          "name": "Nova Pro (Cross Region)"
        },
        "us.amazon.nova-premier-v1:0": {
          "name": "Nova Premier (Cross Region)"
        },
        "global.anthropic.claude-sonnet-4-20250514-v1:0": {
          "name": "Claude Sonnet 4 (Global)"
        },
        "global.anthropic.claude-sonnet-4-5-20250929-v1:0": {
          "name": "Claude Sonnet 4.5 (Global)"
        },
        "global.anthropic.claude-haiku-4-5-20251001-v1:0": {
          "name": "Claude Haiku 4.5 (Global)"
        }
      }
    }
  },
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena.git",
        "serena",
        "start-mcp-server"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "enabled": true
    },
    "aws-knowledge-mcp-server": {
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws",
      "enabled": true
    }
  }
}